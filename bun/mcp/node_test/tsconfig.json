{
  "compilerOptions": {
    "target": "es2024",
    "module": "NodeNext",
    "allowJs": false,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "strictBindCallApply":true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,  
    "skipLibCheck": true, // This should improve preformance.
    "noImplicitOverride": true,
  },
  "include": [
    "src/**/*", "test-core/**/*", "test-integration/**/*"
  ]
}